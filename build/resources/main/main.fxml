<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.canvas.Canvas?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.TreeView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>

<BorderPane fx:id="root" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.MainController">

    <top>
        <MenuBar BorderPane.alignment="CENTER">
            <menus>
                <Menu text="File">
                    <items>
                        <MenuItem text="New Project" />
                        <MenuItem text="Load Project" />
                    </items>
                </Menu>
                <Menu text="Edit">
                    <items>
                        <MenuItem text="Delete" />
                    </items>
                </Menu>
            </menus>
        </MenuBar>
    </top>

    <left>
        <VBox BorderPane.alignment="CENTER">
            <TreeView fx:id="fileView" VBox.vgrow="ALWAYS" />
        </VBox>
    </left>

    <center>
        <Canvas fx:id="canvas" height="248.0" width="441.0" />
    </center>

    <right>
        <VBox BorderPane.alignment="CENTER" />
    </right>

    <bottom>
        <VBox BorderPane.alignment="CENTER" />
    </bottom>
</BorderPane>
